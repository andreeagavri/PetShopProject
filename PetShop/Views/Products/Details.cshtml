@model PetShopModel.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <div class="product-details-container">
        <div class="product-details-row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </div>
        </div>


        <div class="product-details-row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Brand)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Brand)
            </div>
        </div>


        <div class="product-details-row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductType)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.ProductType)
            </div>
        </div>


        <div class="product-details-row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </div>
        </div>


        <div class="product-details-row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </div>
            <img class="product-details-image" src=@Html.DisplayFor(model => model.Image)>
        </div>

        <div class="col-sm-2">
            @Html.DisplayNameFor(model => model.Orders)
        </div>
        <div class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Client</th>
                    <th>Order Date</th>
                </tr>
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
